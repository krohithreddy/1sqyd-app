<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:padding="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardView"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller Name : "
                android:id="@+id/Seller_name_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Seller_name_title"
                android:text="Name"
                android:id="@+id/Seller_name"
                android:textColor="#000000"
                android:layout_marginStart="40dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:id="@+id/Phone_number_title"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_below="@+id/Seller_name_title"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Phone_number_title"
                android:layout_below="@+id/Seller_name"
                android:text="Phone"
                android:id="@+id/Phone_number"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units Available : "
                android:id="@+id/Units_available_title"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_below="@+id/Phone_number_title"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Units_available_title"
                android:layout_below="@+id/Phone_number"
                android:text="Units"
                android:id="@+id/Units_available"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost per Unit : "
                android:id="@+id/Cost_unit_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_below="@+id/Units_available_title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Cost_unit_title"
                android:layout_below="@+id/Units_available"
                android:text="INR"
                android:id="@+id/Cost_unit_value"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>